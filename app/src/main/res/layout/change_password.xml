<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/login_input_phone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:ems="10"
        android:hint="请输入手机号"
        android:inputType="phone" />

    <EditText
        android:id="@+id/login_input_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/login_input_phone"
        android:ems="10"
        android:hint="请输入新密码"
        android:inputType="phone" />


    <EditText
        android:id="@+id/login_input_code"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_input_phone"
        android:layout_alignLeft="@+id/login_input_phone"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="69dp"
        android:hint="请输入验证码"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/login_request_code_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_input_phone"
        android:layout_alignTop="@+id/login_input_code"
        android:text="获取验证码" />

    <Button
        android:id="@+id/login_commit_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_input_code"
        android:layout_below="@+id/login_input_code"
        android:layout_marginTop="34dp"
        android:text="修改密码" />

</RelativeLayout>